#:import MeshLinePlot kivy_garden.graph.MeshLinePlot

BoxLayout:
    canvas:
		Color:
			rgba: .45,.45,.45,1
		Rectangle:
			pos:0,0
			size: root.size
	orientation: 'horizontal'
	padding: 10

    Button:
        id: back_btn_layout
        pos_hint: {"x": 0.0, "top": 1.0}
        background_color: 0, 0, 0, 0
        size_hint: 0.1, 0.1
        background_normal: "assets/back_button.png"
        on_release: app.on_exit_btn()
        Image:
            source: "assets/back_button_normal.png" if self.parent.state == "normal" else "assets/back_button_down.png"
            pos: self.parent.pos
            size: self.parent.size

    GridLayout:
        rows: 3
        spacing: [0, 10]
        row_default_height: self.height/5 - (30/5.)
        row_force_default: True
        size_hint_x: 0.37
        
        Button:
            id: start_btn_layout
            background_color: (0,0,0,1)
            font_size: 50
            halign: 'center'
            valign: 'middle'
            markup: True
            bold: True
            text: 'Start Test'
            on_release: app.on_start_btn()
        Button:
            id: stop_btn_layout
            background_color: (0,0,0,1)
            font_size: 50
            halign: 'center'
            valign: 'middle'
            markup: True
            bold: True
            text: 'Stop Test'
            on_release: app.on_stop_btn()
        Button:
            id: reset_btn_layout
            background_color: (0,0,0,1)
            font_size: 50
            halign: 'center'
            valign: 'middle'
            markup: True
            bold: True
            text: 'Reset Data'
            on_release: app.on_reset_btn()

    BoxLayout:
        orientation: 'vertical'
        padding: [10, 0, 0, 0]
        spacing: 10
        markup: True
        bold: True

        GridLayout:
            size_hint_y: 0.4
            rows: 2
            spacing: 10
            Label:
                size_hint_max_y: 50
                font_size: 40
                markup: True
                bold: True
                text: 'Load Cell Measurement'
                size_hint_y: .4
            Label:
                id: test_time_box
                text: "Test in progress for\n" + str(app.test_time) + " seconds"
                font_size: 40
                color: 0,0,0,1
                halign: 'center'
                valign: 'center'
                color: 1,1,1,1
                markup: True
                bold: True
                canvas.before:
                    Color:
                        rgba: .5,.4,.4,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
        
        GridLayout:
            rows: 2
            Label:
                text: 'Load Cell Voltage'
                size_hint_max_y: 30
                size_hint_max_y: 30
                font_size: 20
                markup: True
                bold: True
            Graph:
                id: graph_test
                plot: MeshLinePlot
                background_color: 0, 0, 0, 1
                xlabel:'Time (s)'
                ylabel:'Measured voltage (V)'
                x_ticks_major: app.x_major
                y_ticks_major: app.y_major
                y_grid_label:True
                x_grid_label:True
                x_grid:True
                y_grid:True
                xmin:0
                ymin:0
                xmax: app.x_max
                ymax: 2 #app.y_max


        
